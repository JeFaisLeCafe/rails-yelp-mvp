<h2>Adding a new Restaurant</strong></h2>
<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.select :category, collection: Restaurant::CATEGORIES %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% end %>
